<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gotowe dania"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ready_img_rosol"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rosolek"
                android:contentDescription="Rosół"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/ready_tv_rosol_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rosół + Schabowy + Kompot"/>

                <TextView
                    android:id="@+id/ready_tv_rosol_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39 zł"/>
            </LinearLayout>

            <Button
                android:id="@+id/ready_btn_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ready_img_pomidorowa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pomidorowa"
                android:contentDescription="Pomidorowa"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/ready_tv_pomidor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pomidorowa + Pierogi + Woda"/>

                <TextView
                    android:id="@+id/ready_tv_pomidor_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33 zł"/>
            </LinearLayout>

            <Button
                android:id="@+id/ready_btn_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
